{{!-- This is the 'wrapper' that is created with all .render() calls vai controller/home-routes or profile-routes.
navbar.js handles the functionality of the buttons in the navbar.
--}}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Middle-Where</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script type="module" src="/js/map.js"></script>
</head>

<body>

  <div class="jumbotron bg-dark text-light">
    <div>
      <header class="text-center bg-dark text-light p-3">
        <h1>From Somewhere to <span class="text-warning fw-bold fs-1">Middle-Where</span></h1>
      </header>
    </div>
  
    <div class="topnav navbar bg-dark text-light container-fluid justify-content-end">
      <div class="container-fluid bg-dark text-light justify-content-start col "> 
        <div id="navbar"</div>
        {{!-- NavBar only necessary for logged in users --}}
        {{#if loggedIn}}
        {{!-- Create and Join Group via form input --}}
        <button class="btn btn-outline-warning"  id="joinGroup" type="submit">
          Join Group
        </button>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" id="userGroupInput" placeholder="Group Name">
        </form>    
        <button class="btn btn-outline-warning" id="createGroup">
          Create Group
        </button>
        <button class="btn btn-outline-warning" id="leaveGroup"> Leave Group </button>
      </div>

      {{!-- Navigation Page --}}
      <div class="container-fluid bg-dark text-light justify-content-end col">
        <a class="btn btn-outline-light me-2" type="button " href="" id="home">
          Home
        </a>
        <a href="" class="btn btn-outline-light" type="button" id="profile" >
          Profile
        </a>
        <a href="" class="btn btn-outline-light" type="button" id="mapBtn">
          Map
        </a>
        <a href="" class="btn btn-outline-light" type="button" id="logout">
          Logout
        </a>
        {{else}}
        <a href="" ></a>
        {{/if}}
      </div>
    </div>
    
    
  </div>

  <main> 
    <div class="main-page">
      {{{body}}}
    </div>
  </main>

  <footer class="bg-dark text-light text-center bottom-0 vw-100">
    <p class="border-bottom border-warning">Middle-Where was created in collaboration:</p>
    <div>
      <ul class="footerul" id="footer-margin">
        <li onclick="location.href='https://github.com/alverson98';">Hannah Alverson  |</li>
        <li onclick="location.href='https://github.com/ZacharyFeltman';">Zachary Feltman  |</li>
        <li onclick="location.href='https://github.com/dylangriess';">Dylan Griess  |</li>
        <li onclick="location.href='https://github.com/l1keafox';">Raymond Lewis  |</li>
        <li onclick="location.href='https://github.com/halliemestas';">Hallie Mestas  |</li>
        <li onclick="location.href='https://github.com/jeffbone95';">Jeff Willingham</li>
      </ul>
    </div>
  </footer>

  <script src="./js/navBar.js"></script>

</body>
</html>
